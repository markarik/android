<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HomeActivity"
    tools:showIn="@layout/app_bar_home">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:id="@+id/profile_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:contentPadding="@dimen/activity_half_margin"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="@dimen/card_radius"
            app:cardElevation="@dimen/card_elevation">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView

                    android:layout_centerInParent="true"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/default_user"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <TextView
                    android:id="@+id/seller_name_id"
                    android:layout_marginStart="70dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/colorBody"
                    android:textStyle="bold"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:text="Micheal Joe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView android:backgroundTint="@color/colorBody"
                    android:layout_marginStart="70dp"
                    android:layout_below="@id/seller_name_id"
                    android:textColor="@color/colorBody"
                    android:textStyle="normal"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:text="includes some liitle description about the seller"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_below="@id/profile_card"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                    android:id="@+id/products_card"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="@dimen/activity_half_margin"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="@dimen/card_radius"
                    app:cardElevation="@dimen/card_elevation">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/products_card_image"
                            android:layout_width="40dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:background="@color/colorPrimary"

                            android:tint="@color/colorPrimary"
                            android:src="@drawable/ic_products"
                            android:layout_height="40dp" />
                        <TextView
                            android:id="@+id/products_card_name"

                            android:layout_below="@id/products_card_image"
                            android:textColor="@color/colorBody"
                            android:textStyle="bold"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                            android:text="Products"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView

                            android:layout_below="@id/products_card_name"
                            android:textColor="@color/colorBody"
                            android:textStyle="normal"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:text="34 Items"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/sales_card"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="@dimen/activity_half_margin"
                    app:cardBackgroundColor="@color/colorGreen"
                    app:cardCornerRadius="@dimen/card_radius"
                    app:cardElevation="@dimen/card_elevation">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/sales_card_image"
                            android:layout_width="40dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:background="@color/colorGreen"

                            android:tint="@color/colorGreen"
                            android:src="@drawable/ic_sales"
                            android:layout_height="40dp" />
                        <TextView
                            android:id="@+id/sales_card_name"

                            android:layout_below="@id/sales_card_image"
                            android:textColor="@color/colorBody"
                            android:textStyle="bold"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                            android:text="Sales"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView

                            android:layout_below="@id/sales_card_name"
                            android:textColor="@color/colorBody"
                            android:textStyle="normal"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:text="26 Items"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/inventory_card"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="@dimen/activity_half_margin"
                    app:cardBackgroundColor="@color/colorAmber"
                    app:cardCornerRadius="@dimen/card_radius"
                    app:cardElevation="@dimen/card_elevation">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/inventory_card_image"
                            android:layout_width="40dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:background="@color/colorAmber"

                            android:tint="@color/colorAmber"
                            android:src="@drawable/ic_event_note_black_24dp"
                            android:layout_height="40dp" />
                        <TextView
                            android:id="@+id/inventory_card_name"

                            android:layout_below="@id/inventory_card_image"
                            android:textColor="@color/colorBody"
                            android:textStyle="bold"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                            android:text="Inventory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView

                            android:layout_below="@id/inventory_card_name"
                            android:textColor="@color/colorBody"
                            android:textStyle="normal"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:text="45 Items"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>



</ScrollView>